{
    "chmod": "0755",
    "directories": [
        "src",
        "definitions",
        "manifests",
        "files"
    ],
    "finder": [
        {
            "name": "*.php",
            "exclude": ["Tests"],
            "in": "vendor"
        },
        {
          "name": "*.json",
          "in": "vendor"
        }
    ],
    "base-path": ".",
    "intercept": true,
    "main": "bin/conman",
    "output": "dist/conman.phar",
    "stub": true
}